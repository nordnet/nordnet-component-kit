{
  "name": "nordnet-component-kit",
  "version": "0.2.8",
  "description": "Custom react components used by Nordnet",
  "main": "dist",
  "scripts": {
    "precommit": "lint-staged",
    "dev": "run-s start",
    "start": "styleguidist server --colors",
    "clean": "rimraf dist",
    "clean:docs": "rimraf docs",
    "build": "run-s clean babel",
    "watch": "npm run babel -- --watch",
    "babel": "babel src -d dist --copy-files --ignore .md",
    "test": "mocha --opts test/mocha.opts",
    "tdd": "mocha --opts test/mocha.opts --watch --watch-extensions js,jsx",
    "coverage": "cross-env NODE_ENV=coverage nyc npm test",
    "precoveralls": "run-s coverage",
    "coveralls": "coveralls < coverage/lcov.info",
    "lint": "eslint src test --ext .js,.jsx",
    "predocs": "run-s clean:docs",
    "docs": "run-s styleguide:build",
    "build:docs": "rimraf documentation/build && styleguidist build",
    "predocs-publish": "run-s build:docs",
    "docs-publish": "gh-pages -d documentation/dist --repo https://$GH_TOKEN@github.com/nordnet/nordnet-ui-kit.git --silent",
    "predocs:publish": "run-s docs",
    "docs:publish": "git-directory-deploy --directory docs --message 'Update docs' --branch gh-pages",
    "styleguide:build": "styleguidist build --config styleguide.config.js --colors",
    "validate": "run-p lint test",
    "prepush": "run-s validate",
    "prepublish": "in-publish && run-s validate build || not-in-publish",
    "postpublish": "run-s docs:publish && git push --follow-tags --no-verify",
    "format": "prettier --write --single-quote --print-width 140 --trailing-comma all"
  },
  "keywords": [
    "nordnet",
    "component",
    "kit",
    "format",
    "react",
    "intl"
  ],
  "files": [
    "dist",
    "src"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run format",
      "git add"
    ]
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "include": [
      "src/*"
    ],
    "extension": [
      ".js",
      ".jsx"
    ],
    "all": true,
    "instrument": false,
    "sourceMap": false,
    "reporter": [
      "lcov",
      "text-summary",
      "text"
    ]
  },
  "author": "Andreas BrostrÃ¶m <andreas.brostrom@nordnet.se>",
  "repository": "nordnet/nordnet-component-kit",
  "bugs": {
    "url": "https://github.com/nordnet/nordnet-component-kit/issues"
  },
  "homepage": "https://nordnet.github.io/nordnet-component-kit",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.5",
    "lodash.camelcase": "^4.3.0",
    "nordnet-ui-kit": "^1.26.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-intl": "^2.4.0"
  },
  "devDependencies": {
    "@webpack-blocks/babel6": "^0.4.1",
    "@webpack-blocks/webpack2": "^0.4.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "in-publish": "^2.0.0",
    "intl": "^1.2.5",
    "jsdom": "^11.5.1",
    "lint-staged": "^6.0.0",
    "mocha": "^5.0.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "prettier": "^1.10.2",
    "react-styleguidist": "^6.1.0",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.6"
  },
  "resolutions": {
    "react": "16.2.0",
    "react-dom": "16.2.0"
  }
}
